{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "*": [
        "./typings/*"
      ]
    },
    "lib": [
      "DOM",
      "ES2015"
    ]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}